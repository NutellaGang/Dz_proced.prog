#include <iostream>
#include <string>
#include <cmath>

using namespace std;

  
double getValue(double variable, string variableName){
	cout << "Введите значение для " << variableName << ": "	;
	while (!(cin >> variable)) {
		cout << "Введите коректное значение!\n";
		cin.clear();
		cin.ignore(256, '\n');
	}
	return variable;
}

int main()
{
	float w, x, a;
	x = getValue(x, "x");
	a = getValue(a, "a");
	if (abs(x) < 1){
		w = a * log(abs(x));
	}else
		w = sqrt(a - x * x);
	cout << "w = " << w;
}
